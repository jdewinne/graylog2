################################### Cluster ###################################
cluster.name: <%= @cluster %>

#################################### Node #####################################
node.master: <%= @master %>
node.data: <%= @data %>
node.name: <%= @hostname %>

#################################### Index ####################################
index.number_of_shards: <%= @shards %>
index.number_of_replicas: <%= @replicas %>

#################################### Paths ####################################
<% if @datadir -%>
path.data: <%= @datadir %>
<% end -%>
<% if @workdir -%>
path.work: <%= @workdir %>
<% end -%>

################################### Memory ####################################
#bootstrap.mlockall: true

############################## Network And HTTP ###############################
network.host: <%= @ipaddress_eth1 %>
transport.tcp.port: 9300
http.port: 9200
http.max_content_length: 100mb

